{% extends 'base.html.twig' %}

{% block title %}E-APTEKA{% endblock %}

{% block body %}
    <div class="container">
        <h2 class="page-title">Товары</h2>
        <div class="row container-body">
            {% for product in products %}
                <div class="col-md-3 mt-4">
                    <a href="{{ path('app_product_show', {'id': product.id}) }}"
                       style="color: inherit; text-decoration: none;">
                        <div class="card h-100 d-flex flex-column" style="width: 16rem; min-height: 26rem;">
                            <div class="text-center">
                                <img src="{{ product.image }}" class="card-img-top img-medium" alt="{{ product.name }}">
                            </div>
                            <div class="card-body flex-grow-1">
                                <h5 class="card-title">{{ product.name }}</h5>
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item">{{ product.description|slice(0, 30) }} ...</li>
                                </ul>
                            </div>
                            <div class="card-footer">
                                <p class="list-group-item text-end fs-5">{{ product.price }} ₽</p>
                                <a href="{{ path('app_admin_product_show', {'id': product.id}) }}"
                                   class="btn btn-block btn-outline-primary">В корзину</a>
                            </div>
                        </div>
                    </a>
                </div>
            {% endfor %}
            {{ knp_pagination_render(products,'layouts/pagination.html.twig') }}
        </div>

    </div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Hello DefaultController!{% endblock %}

{% block body %}
    <div class="container">
        <h2>Товары</h2>

        <div class="row">
            {% for product in products %}
                <div class="col-md-3 mt-4">
                    <a href="{{ path('app_product_show', {'id': product.id}) }}"
                       style="color: inherit; text-decoration: none;">
                        <div class="card h-100" style="width: 16rem;">
                            <img src="{{ product.image }}" class="card-img-top" alt="{{ product.name }}">
                            <div class="card-body">
                                <h5 class="card-title">{{ product.name }}</h5>
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item">{{ product.description|slice(0, 30) }} ...</li>
                                    <li class="list-group-item text-end fs-5">{{ product.price }} ₽</li>
                                </ul>
                                <a href="{{ path('app_admin_product_show', {'id': product.id}) }}"
                                   class="btn btn-block btn-outline-success">В корзину</a>
                            </div>
                        </div>
                    </a>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}

<form method="post" action="{{ path('app_admin_product_delete', {'id': product.id}) }}" onsubmit="return confirm('Вы уверены, что хотите удалить этот товар?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
    <br>
    <button class="btn btn-danger">Удалить</button>
</form>

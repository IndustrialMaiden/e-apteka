{{ form_start(form) }}

<h4 class="text-danger">{{ form_errors(form.image) }}</h4>

<label for="">Название товара</label>
<br>
{{ form_widget(form.name,{'attr':{'class': 'form form-control'}}) }}
<br>
<label for="">Описание</label>
<br>
{{ form_widget(form.description,{'attr':{'class': 'form form-control'}}) }}
<br>
<label for="">Цена</label>
<br>
{{ form_widget(form.price,{'attr':{'class': 'form form-control'}}) }}
<br>
<label for="">Изображение</label>
<br>
{% if product.image %}
    <img src="{{ product.image }}" class="img-fluid img-thumbnail img-medium" alt="Product image">
{% endif %}
{{ form_widget(form.image,{'attr':{'class': 'form'}}) }}
<br>
<br>
<label for="">Подкатегории (можно несколько)</label>
<br>
{{ form_widget(form.subCategories,{'attr':{'class': 'form form-control'}}) }}
<br>
<button class="btn btn-primary">{{ button_label|default('Создать') }}</button>
{{ form_end(form) }}
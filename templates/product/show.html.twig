{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <div class="container">
        <br>
        <h1>{{ product.name }}</h1>
        <br>
        <table class="table">
            <tbody>
            <tr>
                <th>Изображение</th>
                <td><img src="{{ product.image }}" class="img-fluid img-thumbnail" alt="Product image"></td>
            </tr>
            <tr>
                <th>ID</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Подкатегории</th>
                <td>{% for subCategory in product.subCategories %}
                        {{ subCategory.name }}
                    {% endfor %}</td>
            </tr>
            <tr>
                <th>Описание</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Цена</th>
                <td>{{ product.price }}</td>
            </tr>
            <tr>
                <th>Количество</th>
                <td>
                    {% if product.stock > 0 %}
                        {{ product.stock }}
                    {% else %}
                        <span class="text-bg-danger">Нет на складе</span>
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>История поставок</th>
                <td>
                    {% if  product.addProductHistories.count > 0 %}
                        <table class="table">
                            <tbody>
                            <tr>
                                <th>Дата</th>
                                <th>Количество</th>
                            </tr>

                            {% for addProductHistory in product.addProductHistories %}
                                <tr>
                                    <td>{{ addProductHistory.createdAt|date('d-m-Y H:i:s') }}</td>
                                    <td>{{ addProductHistory.quantity }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    {% else %}
                        <span class="text-primary">Поставок не было</span>
                    {% endif %}
                </td>
            </tr>
            </tbody>
        </table>

        <a class="btn btn-outline-primary" href="{{ path('app_product') }}">Вернуться к списку</a>
        <a class="btn btn-primary" href="{{ path('app_product_edit', {'id': product.id}) }}">Изменить</a>
        <a class="btn btn-warning" href="{{ path('app_product_stock_add', {'id': product.id}) }}">Добавить</a>
        {{ include('product/_delete_form.html.twig') }}
    </div>
{% endblock %}

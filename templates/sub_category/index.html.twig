{% extends 'base.html.twig' %}

{% block title %}Подкатегории{% endblock %}

{% block body %}
    <div class="container">
        <br>
        <h2>Подкатегории</h2>
        <br>
        <a class="btn btn-outline-primary" href="{{ path('app_sub_category_new') }}">Создать новую подкатегорию</a>
        <br><br>
        {% include "layouts/_flash_message.html.twig" %}
        <table class="table">
            <thead>
            <tr>
                <th>ID</th>
                <th>Название</th>
                <th>Категория</th>
                <th>Действия</th>
            </tr>
            </thead>
            <tbody>
            {% for sub_category in sub_categories %}
                <tr>
                    <td>{{ sub_category.id }}</td>
                    <td>{{ sub_category.name }}</td>
                    <td>{{ sub_category.category.name }}</td>
                    <td>
                        <a class="btn btn-outline-primary" href="{{ path('app_sub_category_show', {'id': sub_category.id}) }}">Показать</a>
                        <a class="btn btn-primary" href="{{ path('app_sub_category_edit', {'id': sub_category.id}) }}">Изменить</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Нет подкатегорий</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
